<%- include('header') %>
 
<h2>Your Activities</h2> 
<% if (activities && activities.length > 0) { %>
    <ul>
        <% activities.forEach(a => { %>
            <li>
                <strong><%= a.type %></strong> —
                <%= a.duration %> mins —
                <%= a.calories %> calories —
                <%= new Date(a.date).toDateString() %><br>
                Notes: <%= a.notes %>
            </li>
        <% }) %>
    </ul> <% } else { %>
    <p>No activities found.</p> 
<% } %> 
<a href="/activities/add">Add New Activity</a>
 
<%- include('footer') %>
