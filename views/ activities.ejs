<%- include('header') %>

<h2>Your Activities</h2>

<% if (activities.length > 0) { %>
    <ul>
        <% activities.forEach(a => { %>
            <li>
                <strong><%= a.type %></strong> — 
                <%= a.duration %> mins — 
                <%= a.calories %> calories — 
                <%= a.date.toDateString() %><br>
                Notes: <%= a.notes %>
            </li>
        <% }) %>
    </ul>
<% } else { %>
    <p>No activities recorded yet.</p>
<% } %>

<%- include('footer') %>

