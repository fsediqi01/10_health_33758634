<%- include('header') %>

<h2>Search Results</h2>

<% if (results.length > 0) { %>
    <ul>
        <% results.forEach(r => { %>
            <li>
                <strong><%= r.type %></strong> — 
                <%= r.duration %> mins — 
                <%= r.calories %> calories —
                <%= r.date.toDateString() %><br>
                Notes: <%= r.notes %>
            </li>
        <% }) %>
    </ul>
<% } else { %>
    <p>No matching activities found.</p>
<% } %>

<%- include('footer') %>

