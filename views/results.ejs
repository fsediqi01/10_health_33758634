<%- include('header') %>

<h2>Search Results</h2>

<% if (results.length > 0) { %>
    <ul>
        <% results.forEach(r => { %>
            <li>
                <strong><%= r.type %></strong> — 
                <%= r.duration %> mins — 
                <%= r.calories %> calories —
                <%= r.date.toDateString() %><br>
                Notes: <%= r.notes %>
            </li>
        <% }) %>
    </ul>
<% } else { %>
    <p>No matching activities found.</p>
<% } %>

<%- include('footer') %>


<%- include('partials/header') %>

<h2>Search Results</h2>

<ul>
  <% if (results.length === 0) { %>
    <p>No matching activities found.</p>
  <% } else { %>
    <% results.forEach(r => { %>
      <li>
        <strong><%= r.type %></strong> — <%= r.date %>
        <br>Duration: <%= r.duration %> mins
        <br>Calories: <%= r.calories %>
        <br>Notes: <%= r.notes %>
        <hr>
      </li>
    <% }) %>
  <% } %>
</ul>

<%- include('partials/footer') %>
